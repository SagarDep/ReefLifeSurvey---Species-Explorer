<?xml version="1.0" encoding="utf-8"?>

<!--
Defines a layout for buttons, filters, and other goodies that exist in a horizontally scrolling and collapsing toolbar
-->

<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:scrollbars="none"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <Button
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="buttonboye" />

        <ToggleButton
            android:id="@+id/toolbar_button_starred"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:textOn="Starred"
            android:textOff="Starred" />

        <ToggleButton
            android:id="@+id/toolbar_button_loadAll"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:textOn="LOADALL"
            android:textOff="LOADALL" />
        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="ToggleButton" />

        <Button
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:text="buttonboye" />

        <Button
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:text="buttonboye" />

        <ToggleButton
            android:id="@+id/toggleButton4"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="ToggleButton" />

        <ToggleButton
            android:id="@+id/toggleButto5n"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="ToggleButton" />
    </LinearLayout>

</HorizontalScrollView>