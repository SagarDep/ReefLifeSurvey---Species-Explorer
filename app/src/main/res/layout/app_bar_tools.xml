<?xml version="1.0" encoding="utf-8"?>

<!--
Defines a layout for buttons, filters, and other goodies that exist in a horizontally scrolling and collapsing toolbar
-->

<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:scrollbars="none"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:visibility="visible"
        android:id="@+id/toolbar_layout">

        <Button
            android:id="@+id/toolbar_button_quiz"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_fab_fullscreen"
            android:text="Quiz" />

        <ToggleButton
            android:id="@+id/toolbar_button_store_offline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_store_offline"
            android:textOn="Download"
            android:textOff="Download" />

        <ToggleButton
            android:id="@+id/toolbar_button_filter_favorites"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_favorite_heart_filled"
            android:textOn="Favorites"
            android:textOff="Favorites" />



