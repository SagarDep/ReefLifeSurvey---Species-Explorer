        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:id="@+id/details_scientific_name"
            android:layout_below="@id/details_additional_images_scrollview"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="@string/scientific_name_label"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                />

            <TextView
                android:id="@+id/details_label_scientific"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:id="@+id/details_common_name"
            android:layout_below="@id/details_scientific_name"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="@string/common_names_label"
                android:textAppearance="@android:style/TextAppearance.Material.Title"/>

            <TextView
                android:id="@+id/details_label_common"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"  />

        </LinearLayout>


