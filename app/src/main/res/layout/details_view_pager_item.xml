            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:transitionName="@string/transition_launch_details"
            android:contentDescription="@string/image_primary_content_description" />


        <!--layout to show additional images-->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/details_image_main"
            android:id="@+id/details_additional_images_scrollview">
            <LinearLayout
                android:id="@+id/details_additional_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
        </HorizontalScrollView>

